#!/usr/bin/env python3


class AnsiTerminal:
    HEADER = '\033[95m'
    OKBLUE = '\033[94m'
    OKGREEN = '\033[92m'
    WARNING = '\033[93m'
    FAIL = '\033[91m'
    ENDC = '\033[0m'
    BOLD = '\033[1m'
    UNDERLINE = '\033[4m'

    @classmethod
    def str_color(cls, string, color):
        return "{col}{msg}{end}".format(col=color, msg=string, end=cls.ENDC)


print(AnsiTerminal.str_color("hi", AnsiTerminal.OKGREEN))
